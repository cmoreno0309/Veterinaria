<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.veterinaria.proyecto.veterinaria.FragmentPrincipal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linea3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/portada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/portada" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linea3"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/clinica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/clinica48"
                android:onClick="btn_Historia" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linea4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linea2"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_miservicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Mis Servicios"
                android:drawableTop="@drawable/clinica48"
                android:onClick="btn_verservicios" />
            <Button
                android:id="@+id/btn_mismascotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Mis Mascotas"
                android:drawableTop="@drawable/mascota48"
                android:onClick="btn_vermascotas" />

            <Button
                android:id="@+id/btn_miscitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Mis Citas"
                android:drawableTop="@drawable/patita48"
                android:onClick="btn_vercitas" />

        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
