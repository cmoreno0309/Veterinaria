<resources>

    <!-- Base application theme. -->
    <!--Estilo definido en el tema parent -->
    <!-- Estilo definido por nosotros .algo-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- menubar detallemascota. -->
        <item name="colorPrimary">@color/primary_dark</item>

        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/divider</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/divider</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!--<item name="icon">@color/icons</item>
        <item name="divider">@color/divider</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.textTitulo">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextRegistroMascota">
        <item name="android:textColor">#25383C</item>
        <item name="android:padding">5dp</item>
        <item name="android:width">105dp</item>
    </style>

    <style name="EditRegistroMascota">
        <item name="android:textColor">#25383C</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">165dp</item>
    </style>
</resources>
